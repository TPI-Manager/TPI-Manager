{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "app/dist/**",
          "app/dist/**/*"
        ]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(api|socket.io)(.*)",
      "destination": "server.js"
    },
    {
      "source": "/(.*)",
      "destination": "server.js"
    }
  ]
}
