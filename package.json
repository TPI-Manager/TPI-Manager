{
  "name": "tpi-manager",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "(fuser -k 5000/tcp || true) && nodemon server.js",
    "client": "cd app && npm run dev",
    "setup": "npm install && cd app && npm install",
    "test": "jest --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "socket.io-client": "^4.7.5",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  }
}
