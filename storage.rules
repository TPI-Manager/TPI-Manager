rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Only the Node.js server (Admin SDK) writes. 
    // Public Read access for the specific uploads folder if generated via server.
    // The server generates Signed URLs or Public URLs.
    
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}