rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isOwner(field) { return isSignedIn() && request.auth.uid == resource.data[field]; }
    function isCreatingOwn(field) { return isSignedIn() && request.resource.data[field] == request.auth.uid; }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if true;
      allow update: if isSignedIn() && request.auth.uid == userId;
    }
    match /chat/{msgId} {
      allow read: if isSignedIn();
      allow create: if isCreatingOwn('senderId');
      allow update, delete: if isOwner('senderId');
    }
    match /ask/{qId} {
      allow read: if isSignedIn();
      allow create: if isCreatingOwn('senderId');
      allow update, delete: if isOwner('senderId');
    }
    match /announcements/{id} {
      allow read: if true;
      allow create: if isCreatingOwn('creatorId');
      allow update, delete: if isOwner('creatorId');
    }
    match /events/{d=**} {
      allow read: if true;
      allow create: if isCreatingOwn('creatorId');
      allow update, delete: if isOwner('creatorId');
    }
    match /schedules/{d=**} {
      allow read: if true;
      allow create: if isCreatingOwn('creatorId');
      allow update, delete: if isOwner('creatorId');
    }
  }
}